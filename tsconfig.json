{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES2016", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noResolve": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true
  },
  "include": ["./src/"],
  "exclude": ["./node_modules/**/*"]
}
